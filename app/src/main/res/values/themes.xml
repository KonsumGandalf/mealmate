<resources>
    <!-- Base application theme. -->
    <style name="Theme.MealMate" parent="Theme.Material3.Light.NoActionBar">

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_500
        </item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red_200</item>
        <item name="colorSecondaryVariant">@color/green_200
        </item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
        <item name="windowSplashScreenBackground">@color/purple_200</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/meal_mate_icon
        </item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="enterAnim">@anim/from_right</item>
        <item name="exitAnim">@anim/to_left</item>
        <item name="popEnterAnim">@anim/from_left</item>
        <item name="popExitAnim">@anim/to_right</item>
        <item name="materialDividerStyle">@style/Widget.App.MaterialDivider</item>
    </style>

    <style name="ThemeOverlay.MealMate.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">
            @color/light_blue_600
        </item>
        <item name="fullscreenTextColor">
            @color/light_blue_A200
        </item>
    </style>

    <style name="Widget.App.MaterialDivider" parent="Widget.Material3.MaterialDivider">
        <item name="dividerColor">@color/purple_200</item>
    </style>
</resources>
