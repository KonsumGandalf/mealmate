<resources xmlns:tools="http://schemas.android.com/tools">
	<!-- Base application theme. -->
	<style name="Theme.MealMate"
	       parent="Theme.MaterialComponents.DayNight.NoActionBar">
		<!-- Primary brand color. -->

		<item name="android:windowNoTitle">true</item>
		<item name="android:windowFullscreen">true</item>
		<item name="colorPrimary">@color/purple_200</item>
		<item name="colorPrimaryVariant">@color/purple_500
		</item>
		<item name="colorOnPrimary">@color/black</item>
		<!-- Secondary brand color. -->
		<item name="colorSecondary">@color/red_200</item>
		<item name="colorSecondaryVariant">@color/green_200
		</item>
		<item name="colorOnSecondary">@color/black</item>
		<!-- Status bar color. -->
		<!-- Customize your theme here. -->


		<item name="windowSplashScreenBackground">@color/purple_200</item>
		<item
			name="windowSplashScreenAnimatedIcon">@drawable/meal_mate_icon
		</item>
		<item name="windowSplashScreenAnimationDuration">300</item>
	</style>

	<style name="ThemeOverlay.MealMate.FullscreenContainer" parent="">
		<item name="fullscreenBackgroundColor">
			@color/light_blue_900
		</item>
		<item name="fullscreenTextColor">
			@color/light_blue_A400
		</item>
	</style>
</resources>