<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/card_interaction_chat"
            android:layout_width="@dimen/icon_md"
            android:layout_height="@dimen/icon_md"
            android:contentDescription="@string/img_description_cooking_people"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ph_chat" />

        <ImageView
            android:id="@+id/card_interaction_edit"
            android:layout_width="@dimen/icon_md"
            android:layout_height="@dimen/icon_md"
            android:layout_marginStart="75dp"
            android:contentDescription="@string/img_description_cooking_people"
            app:layout_constraintStart_toEndOf="@+id/card_interaction_chat"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ph_pencil" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
